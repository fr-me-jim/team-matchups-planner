{
	"compilerOptions": {
		"target": "es5",
		"lib": ["ES6", "dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"strictNullChecks": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"src/*": ["./src/*"],
			"public/*": ["./public/*"]
		}
	},
	"include": ["**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "middleware.ts"],
	"exclude": ["node_modules"]
}
